<h1>Create a new restaurant</h1>

<%= simple_form_for @restaurant do |f|%>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select category" %>
  <button class= "btn btn-primary"><%= f.button :submit %></button>
<% end %>
